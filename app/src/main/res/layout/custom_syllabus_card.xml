<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="@dimen/margin10"
    app:cardCornerRadius="@dimen/margin10"
    android:layout_marginTop="@dimen/margin10"
    android:layout_marginStart="@dimen/margin10"
    android:layout_marginEnd="@dimen/margin10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/syllabus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 st internal"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@color/text_light"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/white"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:elevation="@dimen/margin10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/syllabus_thumb"
                android:layout_width="@dimen/image40"
                android:layout_height="@dimen/image40"
                android:text="E"
                android:textAllCaps="true"
                android:maxLength="1"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_gravity="top|center"
                android:background="@drawable/round_button"
                android:textSize="@dimen/margin25"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/margin10"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/subjectNameSyllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="@dimen/text_size16"
                android:layout_marginTop="@dimen/margin5"
                android:textColor="@color/icon_color_homework"/>

<!--            <TextView-->
<!--                android:id="@+id/syllabus_subject"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Chaptrer 2 question"-->
<!--                android:layout_marginTop="@dimen/margin5"-->
<!--                android:textSize="@dimen/text_size14"-->
<!--                android:ellipsize="end"-->
<!--                android:textColor="@color/text_light"/>-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/teacherNameSyllabus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Name"
                    android:textSize="@dimen/text_size12"
                    android:layout_marginEnd="@dimen/margin5"
                    android:textColor="@color/text_light"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view_color"/>

                <TextView
                    android:id="@+id/publishDateSyllabus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin5"
                    android:text="20 jan 20"
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/text_light"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/syllabus_download_btn"
                android:layout_width="@dimen/image40"
                android:layout_height="@dimen/image40"
                android:gravity="center"
                android:padding="@dimen/margin10"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_gravity="center"
                app:srcCompat="@drawable/file_download"
                android:background="@drawable/round_button"
                android:textSize="@dimen/image40"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>