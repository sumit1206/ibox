<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin10"
    android:layout_margin="@dimen/margin5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/margin5">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_line_color"
            android:layout_width="@dimen/margin5"
            android:layout_height="match_parent"
            android:background="@color/toolbar_color"/>

        <TextView
            android:id="@+id/percentage_of_marks"
            android:layout_width="@dimen/image60"
            android:layout_height="@dimen/image60"
            android:scaleType="centerCrop"
            android:background="@drawable/round_button"
            android:text="92 %"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin10"
            android:padding="@dimen/margin5"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/margin20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:padding="@dimen/margin10"
            android:paddingStart="@dimen/margin10"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test_name_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/test_name"
                android:textSize="@dimen/text_size18"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingTop="@dimen/margin5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20 jun 20"
                    android:padding="@dimen/margin3"
                    android:textSize="@dimen/text_size14"
                    android:paddingTop="@dimen/margin5"
                    android:textColor="@color/text_light"
                    android:gravity="start"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/margin30"
            android:layout_height="@dimen/margin30"
            android:layout_gravity="center"
            android:backgroundTint="@color/text_light"
            android:background="@drawable/chevron_right"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>