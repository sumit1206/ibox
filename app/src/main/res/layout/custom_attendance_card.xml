<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin5"
    app:cardCornerRadius="@dimen/margin5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/margin5">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin10"
    android:elevation="@dimen/margin5">



    <ImageView
        android:id="@+id/upload_attandance_student_image"
        android:layout_width="@dimen/image60"
        android:layout_height="@dimen/image60"
        android:scaleType="centerCrop"
        android:background="@drawable/avater" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:paddingStart="@dimen/margin10"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upload_attandance_student_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/student_name"
            android:textSize="@dimen/text_size18"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingTop="@dimen/margin5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin3"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/upload_attandance_student_class"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:padding="@dimen/margin3"
            android:textSize="@dimen/text_size14"
            android:paddingTop="@dimen/margin5"
            android:textColor="@color/text_light"
            android:gravity="start"
            android:layout_gravity="center"
            android:paddingStart="@dimen/margin10"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_light"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin3"
                android:layout_marginBottom="@dimen/margin3"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginEnd="@dimen/margin10"/>
            <TextView
                android:id="@+id/upload_attandance_student_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:padding="@dimen/margin3"
                android:textSize="@dimen/text_size14"
                android:paddingTop="@dimen/margin5"
                android:paddingStart="@dimen/margin10"/>

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/attendance"-->
<!--                android:padding="@dimen/margin3"-->
<!--                android:textSize="@dimen/text_size14"-->
<!--                android:paddingTop="@dimen/margin5"-->
<!--                android:paddingStart="@dimen/margin10"/>-->
<!--            -->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="A"-->
<!--                android:padding="@dimen/margin3"-->
<!--                android:textSize="@dimen/text_size14"-->
<!--                android:paddingTop="@dimen/margin5"-->
<!--                android:paddingStart="@dimen/margin10"/>-->

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/attandence_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="true"
        android:background="@drawable/round_button"/>

</LinearLayout>
</androidx.cardview.widget.CardView>