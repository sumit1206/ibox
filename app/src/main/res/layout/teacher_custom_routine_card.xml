<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    android:focusable="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:focusable="true">

        <TextView
            android:id="@+id/class_routine_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:gravity="center"
            android:textSize="@dimen/text_size14"
            android:drawableStart="@drawable/access_time_black"
            android:drawablePadding="@dimen/margin5"
            android:paddingEnd="@dimen/margin10"
            android:textColor="@color/text_light"
            android:padding="@dimen/margin3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/step_number_circle"
                android:layout_width="@dimen/vertical_stepper_form_width_circle"
                android:layout_height="@dimen/vertical_stepper_form_width_circle"
                android:background="@drawable/circle_step_done">

                <ImageView
                    android:id="@+id/step_done_icon"
                    android:layout_width="@dimen/vertical_stepper_form_width_circle"
                    android:layout_height="@dimen/vertical_stepper_form_width_circle"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/black"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    tools:visibility="visible"/>
            </FrameLayout>

            <View
                android:id="@+id/line_track"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|start"
                android:padding="@dimen/margin10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teacher_subject_name_routine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size16"
                    android:maxLines="1"
                    tools:text="Math"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

            <TextView
                android:id="@+id/teacher_class_routine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size16"
                    tools:text="1"/>

                <TextView
                    android:id="@+id/teacher_section_routine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size14"
                    android:text="A"
                    android:textColor="@color/text_light" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/class_routine_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:gravity="center|end"
                    android:textSize="@dimen/text_size14"
                    android:drawableStart="@drawable/watch_later_black"
                    android:drawablePadding="@dimen/margin5"
                    android:paddingEnd="@dimen/margin10"
                    android:textColor="@color/text_light"
                    android:padding="@dimen/margin3"/>

            </LinearLayout>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>