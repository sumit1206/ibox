<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/faq_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    app:cardCornerRadius="@dimen/margin5"
    android:elevation="@dimen/padding10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/faqQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size16"
            android:layout_marginTop="@dimen/margin5"
            android:text="Q: What is your question?"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:ellipsize="end"
            android:paddingStart="@dimen/margin10"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/faqAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size14"
            android:text="A: your answer"
            android:paddingStart="@dimen/margin10"
            android:gravity="start|center"
            android:textColor="@color/text_light"
            android:layout_marginTop="@dimen/margin5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin10">

            <TextView
                android:id="@+id/faqConsumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size14"
                android:text="name"
                android:layout_weight="1"
                android:gravity="start|center"
                android:textColor="#8D8C8C"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>